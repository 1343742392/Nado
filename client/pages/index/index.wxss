.head
{
  width: 100vw;
  height: 30vh;
}

.headButtons
{
  height: 23vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items:center;
}

.headButton
{
  height: 15vw;
  width: 15vw;
  margin-left: 10vw;
  margin-right: 10vw;
}

.row
{
  width: 100vw;
  height: 9vh;
  padding-left: 1vw;
  display: flex;
  justify-content: center;
  align-items:center;
  background-color: #EBEB0B;
}
.face
{
  width: 10vw;
  height: 10vw;
  border-radius: 70%;
  background-color: #fff;
}


.search
{  
  height: 5vh;
  width: 75vw;
  border:1vh solid black;
} 
 button{
display:block;
padding-left:0px;
padding-right:0px;
line-height:10px;
background-color: rgba(255,255,255,0);
}

button::after {
width:0;
height:0;
top:0;
left:0
}
.messageBoard
{
  display: flex;
  justify-content: center;
  align-items:center;
  width: 100vw;
  height: 58vh;
}

.messageScroll
{
  background-color: #fff;
  width: 66vw;
  height: 50vh;

}

.message
{
  border-bottom: 0.5vw solid ;
  padding-top: 1vh;
  padding-bottom: 0.9vh;
  border-color: #ebebeb;
}

.messageText
{
  margin-left: 2vw;
  margin-right: 2vw;
  width: 62vw;
  font-size: 16px;
}


.messageName
{
  margin-left: 4vw;
  font-size: 12px;
}

.messageCommentNum
{
  font-size: 12px;
  margin-left: 1vw;
}

.messageCommentIco
{
    width: 3.6vw;
    height: 2.9vw;
    margin-left: 40vw;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.bottom
{
  height: 12vh;
  width: 100vw;
  background: #FFFFFF;
  display: flex;
  align-items:center;
  justify-content: center;
  flex-direction: column;
}

.name
{
height: 4vh;
  display: flex;
  justify-content: center;
  font-size: 15px;
}
.ctrlButton
{
  display: flex;
  justify-content:center;
}

.play
{
  margin-left: 10vw;
  margin-right: 10vw;
  width: 6vw;
  height: 6vw;
}

.next
{
  width: 6vw;
  height: 6vw;
}